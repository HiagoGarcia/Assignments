<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    @using CRUDelicious.Models
    @model Dish;
</head>

<body>
    <h1>Create a new Dish!</h1>
    <a href="/">Home</a>

    <form action="/updateDish" method="POST">
        <label for="name_field">Name of Dish: </label>
        <input type="text" name="Name" id="name_field" value="@Model.Name">
        <br>
        <label for="chef_field">Name of Chef: </label>
        <input type="text" name="Chef" id="chef_field" value="@Model.Chef">
        <br>
        <label for="taste_field">Tastiness</label>
        <select name="Tastiness" id="taste_field" value="@Model.Tastiness">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <br>
        <label for="calories_field">Calories</label>
        <input type="number" name="Calories" id="calories_field" value="@Model.Calories">
        <br>
        <label for="desc_field">Description</label>
        <br>
        <textarea name="Description" id="desc_field" cols="30" rows="10">@Model.Description</textarea>
        <input type="hidden" name="DishId" value="@Model.DishID">
        <br>
        <button type="submit">Edit Dish!</button>
    </form>
</body>

</html>