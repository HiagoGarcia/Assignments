@model List<Dish>

<div class="text-center">

    <span><a href="/">Chefs</a> | Dishes</span>
    <br>
    <a href="/dishes/new">Add a Dish</a>
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h3>Yum, take a look at our tastry dishes!</h3>
                    <table class="table table-striped">
                        <tr>
                            <th>Name of Dish</th>
                            <th>Name of Chef</th>
                            <th>Tastiness</th>
                            <th>Calories</th>
                        </tr>
                        @foreach (var dish in Model)
                        {
                            <tr>
                                <td>@dish.Name</td>
                                <td>@dish.Creator.FirstName @dish.Creator.LastName</td>
                                <td>@dish.Tastiness</td>
                                <td>@dish.Calories</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>