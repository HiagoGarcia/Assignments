<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    @model Dish
</head>

<body>
    <h1>Create a new Dish!</h1>
    <a href="/dishes">Home</a>

    <div class="box">
        <form asp-action="AddDish" asp-controller="Home" method="post">
            <div class="space">
                <label asp-for="Name"></label>
                <span asp-validation-for="Name"></span>
                <input asp-for="Name">
            </div>
            <div class="space">
                <label asp-for="Calories"></label>
                <span asp-validation-for="Calories"></span>
                <input asp-for="Calories">
            </div>
            <div class="space">
                <label asp-for="Tastiness"></label>
                <span asp-validation-for="Tastiness"></span>
                <select asp-for="Tastiness">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>
            <div class="space">
                <label asp-for="Desctiprion"></label>
                <span asp-validation-for="Desctiprion"></span>
                <input asp-for="Desctiprion">
            </div>
            <div class="space">
                <label asp-for="Creator"></label>
                <span asp-validation-for="ChefID"></span>
                <select asp-for="ChefID">
                    @foreach (var c in ViewBag.Chefs)
                    {
                        <option value="@c.ChefID">@c.FirstName @c.ChefID</option>
                    }
                </select>
            </div>
            <button type="submit">Submit</button>
        </form>
    </div>
</body>

</html>