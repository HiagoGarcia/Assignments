@model Product

<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h3>Yum, take a look at our tastry dishes!</h3>
                    <form action="">
                        <select name="" id="">
                            @foreach (var sub in Model.Categories)
                            {
                                <option value="@sub.Category.CategoryID">@sub.Category.Name</option>
                            }
                        </select>
                    </form>
            </div>
        </div>
    </div>
</div>
